From: Sebastian Muxel <sebastian@muxel.dev>
Date: Sun, 19 Oct 2025 19:16:16 +0200
Subject: [PATCH] config: adapt to muxnix needs

Signed-off-by: Sebastian Muxel <sebastian@muxel.dev>
---
 configs/generic-rk3576_defconfig | 17 ++++++++++++++---
 1 file changed, 14 insertions(+), 3 deletions(-)

diff --git a/configs/generic-rk3576_defconfig b/configs/generic-rk3576_defconfig
index 5e25653820c..09378883b15 100644
--- a/configs/generic-rk3576_defconfig
+++ b/configs/generic-rk3576_defconfig
@@ -7,11 +7,17 @@ CONFIG_ROCKCHIP_RK3576=y
 CONFIG_SYS_LOAD_ADDR=0x40c00800
 CONFIG_DEBUG_UART_BASE=0x2AD40000
 CONFIG_DEBUG_UART_CLOCK=24000000
+CONFIG_ARMV8_SPL_EXCEPTION_VECTORS=y
 CONFIG_DEBUG_UART=y
+CONFIG_LOCALVERSION="-muxnix"
+# CONFIG_EFI_LOADER is not set
+CONFIG_SPL_FIT_PRINT=y
 # CONFIG_BOOTMETH_VBE is not set
+# CONFIG_LEGACY_IMAGE_FORMAT is not set
 CONFIG_DEFAULT_FDT_FILE="rockchip/rk3576-generic.dtb"
 # CONFIG_DISPLAY_CPUINFO is not set
 CONFIG_SPL_MAX_SIZE=0x40000
+CONFIG_SPL_SHOW_ERRORS=n
 # CONFIG_SPL_RAW_IMAGE_SUPPORT is not set
 CONFIG_CMD_MEMINFO=y
 CONFIG_CMD_MEMINFO_MAP=y
@@ -23,11 +29,14 @@ CONFIG_CMD_ROCKUSB=y
 CONFIG_CMD_USB_MASS_STORAGE=y
 # CONFIG_CMD_SETEXPR is not set
 CONFIG_CMD_RNG=y
-# CONFIG_SPL_DOS_PARTITION is not set
+# CONFIG_DOS_PARTITION is not set
 # CONFIG_OF_UPSTREAM is not set
 CONFIG_OF_SPL_REMOVE_PROPS="clock-names interrupt-parent assigned-clocks assigned-clock-rates assigned-clock-parents"
 CONFIG_NO_NET=y
-# CONFIG_ADC is not set
+CONFIG_SPL_ADC=y
+CONFIG_BUTTON=y
+CONFIG_BUTTON_ADC=y
+CONFIG_BUTTON_GPIO=y
 # CONFIG_USB_FUNCTION_FASTBOOT is not set
 CONFIG_ROCKCHIP_GPIO=y
 CONFIG_SUPPORT_EMMC_RPMB=y
@@ -37,7 +46,7 @@ CONFIG_MMC_SDHCI=y
 CONFIG_MMC_SDHCI_SDMA=y
 CONFIG_MMC_SDHCI_ROCKCHIP=y
 CONFIG_PHY_ROCKCHIP_INNO_USB2=y
-CONFIG_BAUDRATE=1500000
+CONFIG_PWM_ROCKCHIP=y
 CONFIG_DEBUG_UART_SHIFT=2
 CONFIG_SYS_NS16550_MEM32=y
 CONFIG_SYSRESET_PSCI=y
@@ -47,4 +56,6 @@ CONFIG_USB_DWC3_GENERIC=y
 CONFIG_USB_GADGET=y
 CONFIG_USB_GADGET_DOWNLOAD=y
 CONFIG_USB_FUNCTION_ROCKUSB=y
+CONFIG_ZLIB_UNCOMPRESS=y
+CONFIG_SPL_GZIP=y
 CONFIG_ERRNO_STR=y
